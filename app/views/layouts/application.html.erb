<!DOCTYPE html>
<html>
  <head>
    <title>Rform</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <style>
    .huebee__cursor {
        width: 30px;
        height: 30px;
      }
    </style>

  </head>

  <body data-controller="modal surveys select-question" style="position:relative;">
    <header class="px-1 bg-gentleYellow	fixed z-10 w-full ">
      <div id="nav" class="flex-wrap md:flex w-full md:justify-between items-center">
        <div class="flex justify-center text-xl mx-0 md:mx-12 mt-2 md:my-4 md:text-3xl font-bold text-gray-700 italic">
          <%= link_to 'Rform', root_path%>  
        </div>
        <% if current_user %>  
          <div class="mx-12 flex justify-center">
          <span class="text-base md:text-xl my-1 mx-1 md:mx-3 py-1 md:py-2 px-1 md:px-4 font-bold text-ironGray active:translate-y-0.5 active:border-b-gray-200">
           <%= link_to "會員中心", edit_users_path(current_user.id) %>
          </span>
          <span class="text-base md:text-xl my-1 mx-1 md:mx-3 py-1 md:py-2 px-1 md:px-4 font-bold text-ironGray active:translate-y-0.5 active:border-b-gray-200">
            <%= link_to "登出", user_sessions_path, method: :post %>
          </span>
          <span class="text-base md:text-xl my-1 mx-1 md:mx-3 py-1 md:py-2 px-1 md:px-4 font-bold text-ironGray active:translate-y-0.5 active:border-b-gray-200">
            <%= link_to "我的問卷", surveys_path  %>
          </span>
        </div>
        <% elsif @response && current_user.blank? %>
  
        <% else %>
        <div class="mx-12 flex justify-center">
          <span class="text-base md:text-xl my-1 mx-1 md:mx-3 py-1 md:py-2 px-1 md:px-4 font-bold text-ironGray active:translate-y-0.5 active:border-b-gray-200">
            <%= link_to "註冊", new_users_path %>
          </span>
          <span class="text-base md:text-xl my-1 mx-1 md:mx-3 py-1 md:py-2 px-1 md:px-4 font-bold text-ironGray active:translate-y-0.5 active:border-b-gray-200">
            <%= link_to "登入", new_user_sessions_path %>
          </span>
        </div>
      <% end %>
        </div>
    </header>

    <% if flash[:notice] %>
    <div
    data-controller="notification"
    class="notice hidden"
    data-notification-delay-value="5000"
    data-transition-enter-from="opacity-0 translate-x-6"
    data-transition-enter-to="opacity-100 translate-x-0"
    data-transition-leave-from="opacity-100 translate-x-0"
    data-transition-leave-to="opacity-0 translate-x-6">
      <p id="notice"><%= flash[:notice] %></p>
      <button data-action="notification#hide" class="notice-button"><i class="fas fa-times-circle"></i></button>
    </div>
    <% end %>
    <% if flash[:alert] %>
    <div
    data-controller="notification"
    class="alert hidden"
    data-notification-delay-value="5000"
    data-transition-enter-from="opacity-0 translate-x-6"
    data-transition-enter-to="opacity-100 translate-x-0"
    data-transition-leave-from="opacity-100 translate-x-0"
    data-transition-leave-to="opacity-0 translate-x-6">
      <p id="alert" class=""><%= flash[:alert] %></p>
      <button data-action="notification#hide" class="notice-button"><i class="fas fa-times-circle"></i></button>
    </div>
    <% end %>
    <%= yield %>
  </body>
</html>
