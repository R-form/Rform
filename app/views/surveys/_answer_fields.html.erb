<div class='group answer'>
  <%= form.hidden_field :id, class: "answer_id",data:{"auto-save-target": "answer"}  %>
  <%= form.hidden_field :_destroy %>
    <input type="checkbox" name="" id="deco_checkbox" disabled>
    <%= form.text_field :title, placeholder: '選項', autocomplete: "off", class: 'answer-input survey-input', data: {action: "change->auto-save#add_answer"}%>
   <% if form.object.question&.question_type != "多選題" %>
    <%= link_to "#", data: {
      action: "click->skip-logic-modal#openAlert"}, 
      class: "btn-for-answer",
      title: "跳題設計" do %>
      <i class="fas fa-forward"></i>
      <% end %>
    <% end %>
    <%= link_to "#", data: { action: "click->nested-form#remove_association click->auto-save#remove_answer" }, class: "btn-for-answer", title:"刪除答案" do %>
      <i class="fas fa-trash-alt"></i>
  <% end %>
</div>



