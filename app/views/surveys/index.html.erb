<h1 class="text-5xl text-center text-gray-700"><%= link_to '我的問卷', surveys_path %></h1>

<section>
  <div class="container mt-4 mx-auto" data-controller="modal surveys" data-modal-allow-background-close="false" >
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4" data-controller="sortable">
      <% @surveys.each do |survey| %>
        <div class="card m-2 cursor-pointer border border-gray-400 rounded-lg hover:shadow-md hover:border-opacity-0 transform hover:-translate-y-1 transition-all duration-200" data-id="<%= survey.id %>"   >
          <%= link_to survey_path(survey) do %>
            <div class="m-3">
              <span class="text-sm text-teal-800 font-mono bg-teal-100 inline rounded-full px-2 align-top float-right animate-pulse">Tag</span>
              <h2 class="text-lg mb-2 truncate"><%= survey.title %></h2>
              <p class="font-light font-mono text-sm text-gray-700 hover:text-gray-900 transition-all duration-200  truncate "><%= survey.description %></p> 
              <div class="mt-5 text-right">
                
                <%= link_to edit_survey_path(survey), class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-1 px-2 mx-2 rounded-full" do %>
                  <i class="fas fa-pen"></i>
                <% end %>
                <%= link_to duplicate_survey_path(survey), class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-1 px-2 mx-2 rounded-full" do %>
                  <i class="fa-solid fa-copy"></i>
                  <i class="fas fa-copy"></i>
                <% end %>
                
                <%= link_to "#", data: {action:"click->modal#open click->surveys#share" ,url: responses_new_path(survey) }, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-1 px-2 mx-2 rounded-full" do %>
                  <i class="fas fa-share"></i>
                <% end %>
              
                <%= link_to survey, method: :delete, data: { confirm: '確定要刪除問卷嗎?' }, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-1 px-2 mx-2 rounded-full" do%>
                  <i class="fas fa-trash-alt"></i>
                <% end %>
              </div>
              <div>
                <%= form_with(model: survey, url: survey_tag_path(survey), method: "patch") do |form| %>
                  <%= form.label :tag %>
                  <%= form.text_field :tag, data: {controller: "tag"} %>
                  <%= form.submit "更新分類標籤" %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
                <!-- Modal Container -->
    <div data-modal-target="container" data-action="click->modal#closeBackground keyup@window->modal#closeWithKeyboard" class="hidden animated fadeIn fixed inset-0 overflow-y-auto flex items-center justify-center" style="z-index: 9999;">
      <div class="min-w-screen h-screen animated fadeIn faster  fixed  left-0 top-0 flex justify-center items-center inset-0 z-50 outline-none focus:outline-none bg-no-repeat bg-center bg-cover"  id="modal-id">
        <div class="w-full  max-w-lg p-5 relative mx-auto my-auto rounded-xl shadow-lg  bg-white ">
          <!--content-->
          <div class="">
            <!--body-->
            <div class="text-center p-5 flex-auto justify-center">
              <i class="fas fa-check-circle fa-5x" style="color: limegreen;" ></i>
              <h2 class="text-xl font-bold py-4 ">按下複製分享你的問卷！</h3>
              <p class="text-sm text-gray-500 px-8">透過下方網址，可以讓你的朋友們更容易地看到你的問卷</p>
              <div class="flex items-center border-b border-teal-500 py-2">
                <input class="appearance-none bg-transparent border-none w-full text-gray-700 mr-3 py-1 px-2 leading-tight focus:outline-none" type="text" value="待放網址" disabled="true" aria-label="Full name" data-surveys-target="short_url" >
                <button class="flex-shrink-0 text-sm bg-gray-500 border-gray-500 text-white hover:bg-gray-700 hover:border-gray-700  border-4 py-1 px-2 rounded" type="button" data-action="click->surveys#copy">
                  複製
                </button>
              </div>
            </div>
            <!--footer-->
            <div class="p-3  mt-2 text-center space-x-4 md:block">
                <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" data-action="click->modal#close">Close</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<div class="text-right">
  <%= link_to '建立問卷', new_survey_path ,class: "absolute bottom-8 right-8 bg-gray-500 hover:bg-gray-700 text-white font-bold py-5 px-10 rounded-full"%>
</div>