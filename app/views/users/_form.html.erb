<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <!-- page -->
<main class="relative min-h-screen w-full bg-white">
  <!-- component -->
  <div class="p-6" x-data="app">
    <section
      class="absolute top-1/3 left-1/2 mx-auto max-w-sm -translate-x-1/2 -translate-y-1/2 transform space-y-4 text-center"
    >
      <!-- register content -->
      <div x-show="isLoginPage" class="space-y-4">
        <header class="mb-3 text-2xl font-bold">Register | 註冊</header>

          <div class="field w-full rounded-2xl bg-gray-50 px-4 ring-2 ring-gray-200">
            <%= form.text_field :email, placeholder:"Email",
             class: "my-3 w-full border-none bg-transparent outline-none focus:outline-none" %>
          </div>

          <div class="field w-full rounded-2xl bg-gray-50 px-4 ring-2 ring-gray-200">
            <%= form.password_field :password, placeholder:"Password", 
            class:"my-3 w-full border-none bg-transparent outline-none focus:outline-none" %>
          </div>

          <div class="field w-full rounded-2xl bg-gray-50 px-4 ring-2 ring-gray-200">
            <%= form.password_field :password_confirmation, placeholder:"Password", 
            class:"my-3 w-full border-none bg-transparent outline-none focus:outline-none" %>
          </div>
                  
        <button
          class="actions w-full rounded-2xl border-b-4 border-b-blue-600 bg-blue-500 py-3 font-bold text-white hover:bg-blue-400 active:translate-y-[0.125rem] active:border-b-blue-400"
        >
          <%="Creat Your Account "%>
        </button>
      </div>       

      <div class="flex items-center space-x-4">
        <hr class="w-full border border-gray-300" />
        <div class="font-semibold text-gray-400">OR</div>
        <hr class="w-full border border-gray-300" />
      </div>

      <footer>
        <div class="grid grid-cols-2 gap-4">
         <%= link_to "FACEBOOK", auth_at_provider_path(:provider => :facebook), 
          class:"rounded-2xl border-b-2 border-b-gray-300 bg-white py-2.5 px-4 font-bold text-blue-700 ring-2 ring-gray-300 hover:bg-gray-200 active:translate-y-[0.125rem] active:border-b-gray-200"
            %>
          <%= link_to "GOOGLE", auth_at_provider_path(:provider => :google), 
          class:"rounded-2xl border-b-2 border-b-gray-300 bg-white py-2.5 px-4 font-bold text-blue-700 ring-2 ring-gray-300 hover:bg-gray-200 active:translate-y-[0.125rem] active:border-b-gray-200"
            %>
        </div>

        <div class="mt-8 text-sm text-gray-400">
          By signing in to ********, you agree to our
          <a href="#" class="font-medium text-gray-500">Terms</a> and
          <a href="#" class="font-medium text-gray-500">Privacy Policy</a>.
        </div>
      </footer>
    </section>
  </div>
</main>

<script>
  document.addEventListener("alpine:init", () => {
    Alpine.data("app", () => ({
      isLoginPage: true,
    }));
  });
</script>


<% end %>
